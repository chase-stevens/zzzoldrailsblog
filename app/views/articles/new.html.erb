<%= form_with scope: :article, url: articles_path, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text, size: "100x25", value: "---\ntitle: \npublished: false\ndescription: \ntags: \n---\n" %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
